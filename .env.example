# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Supabase Configuration
# Get your credentials from: https://supabase.com/dashboard > Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Shopify Configuration
# Get your credentials from: Shopify Admin > Apps > Develop apps > Create an app
NEXT_PUBLIC_SHOPIFY_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token_here

# Optional: Shopify Admin API (for backend operations)
SHOPIFY_ADMIN_ACCESS_TOKEN=your_admin_access_token_here
SHOPIFY_API_VERSION=2024-01

# Email Configuration (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# Redis Configuration (Upstash)
# Get your credentials from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Sentry Configuration (Error Monitoring)
# Get your DSN from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here

# Cloudflare Stream Configuration (Video Streaming)
# Get your credentials from: https://dash.cloudflare.com > Stream > API Tokens
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_STREAM_API_TOKEN=your_cloudflare_stream_api_token_here

# Optional: Vercel Deployment
NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=

# Node Environment
NODE_ENV=development

# Health Data Integration Configuration

# Google Fit
# Get your credentials from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id_here
GOOGLE_FIT_CLIENT_SECRET=your_google_fit_client_secret_here
GOOGLE_FIT_REDIRECT_URI=http://localhost:3000/api/auth/google-fit/callback

# Fitbit
# Get your credentials from: https://dev.fitbit.com/apps
NEXT_PUBLIC_FITBIT_CLIENT_ID=your_fitbit_client_id_here
FITBIT_CLIENT_SECRET=your_fitbit_client_secret_here
FITBIT_REDIRECT_URI=http://localhost:3000/api/auth/fitbit/callback

# Garmin (Requires partnership agreement)
# Get your credentials from: https://developer.garmin.com
GARMIN_CONSUMER_KEY=your_garmin_consumer_key_here
GARMIN_CONSUMER_SECRET=your_garmin_consumer_secret_here

# OpenAI Configuration (AI Personalization Features)
# Get your API key from: https://platform.openai.com/api-keys
# Note: AI features work with rule-based fallback if not configured
OPENAI_API_KEY=sk-your_openai_api_key_here
